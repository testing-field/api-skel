{
  "db": {
    "client": "mysql2",
    "connection": {
      "host": "db",
      "user": "root",
      "password": "root",
      "database": "app",
      "decimalNumbers": true
    },
    "pool": {
      "min": 0,
      "max": 7
    },
    "migrations": {
      "directory": "./priv/migrations"
    },
    "seeds": {
      "directory": "./priv/seeds/dev"
    },
    "useNullAsDefault": true
  },
  "log": {
    "name": "app",
    "base": {
      "region": "local",
      "env": "development"
    },
    "enabled": true
  }
}